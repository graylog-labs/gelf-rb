source "https://rubygems.org"

group :development do
  gem 'shoulda', '~> 3.5'
  gem 'jeweler', '~> 2.3.9'
  # Because of a dependency chain jeweler->github_api->oauth2->rack,
  # pin the version: Rack 2.0.x doesn't work on < Ruby 2.2
  gem 'rack', '~> 2.2.3'
  gem 'mocha', '~> 1.11.2'
  gem 'test-unit', '~> 3.3.6'
end
